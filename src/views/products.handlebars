<div>
  <div class="row">
    <div class="d-flex flex-wrap justify-content-center">
      {{#each products}}
      <div class="card m-5" style="width: 18rem;">
        <img src="{{this.thumbnails.[0]}}" class="card-img-top" alt="..." />
        <div class="card-body">
          <h5 class="card-title">{{this.title}}</h5>
          <p class="card-text">${{this.price}}</p>
          
          <a id="{{this._id}}" data-cart-id="{{../cart}}" name="addProductBtn" onclick="addToCart(this.id,this.dataset.cartId)" class="btn btn-primary">Add to cart</a>
          
        </div>
      </div>
      {{/each}}
    </div>
  </div>
  <div class="d-flex flex-row justify-content-center">
    {{#if hasPrevPage}}
    <a href="{{prevLink}}"><button class="btn btn-primary">Anterior</button></a>
    {{/if}}

    <p class="mx-2 mt-2">{{page}} of {{totalPages}}</p>

    {{#if hasNextPage}}
    <a href="{{nextLink}}"><button class="btn btn-primary">Siguiente</button></a>
    {{/if}}
  </div>
</div>
<script src="/js/products.js"></script>